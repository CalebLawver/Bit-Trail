<section>
  <h2>Add New Trail</h2>

  <form class="new-post-form">
    
    <div>
      <label for="tname">Trail Name</label>
      <input type="text" id="tname" name="tname"/>
    </div>
    <div>
      <label for="address">Address</label>
      <input type="text" id="address" name="address" />
    </div>
    <div>
      <label for="miles">Length in miles</label>
      <input type="number" step="any" id="miles" name="miles" />
    </div>
    <div>
      <label for="kilometers">Length in kilometers</label>
      <input type="number" step="any" id="kilometers" name="kilometers" />
    </div>
    <div>
      <label for="lat">Latitude</label>
      <input type="number" step="any" step="any" id="lat" name="lat" />
    </div>
    <div>
      <label for="lon">Longitude</label>
      <input type="text" id="lon" name="lon" />
    </div>
    <div>
      <label for="difficulty">Difficulty</label>
        <select name="difficulty" id="difficulty">
          <option value="easy">Easy</option>
          <option value="medium">Medium</option>
          <option value="hard">Hard</option>          
        </select>
    </div>
    <div>
      <label for="blurb">Blurb</label>
      <input type="text" id="blurb" name="blurb" />
    </div>
    
    <button type="submit" class="btn">Add Trail</button>
  </form>
</section>

{{#if trails.length}}
<section>
  <h2>Your Trails</h2>
  <ol>
    {{#each trails as |trail|}}
    <li>
      {{> trail-info trail}}
      <a href="/create-trails/edit/{{trail.id}}" class="">Edit Trail</a>
    </li>
    {{/each}}
  </ol> 
</section>
{{/if}}

<script src="/javascript/add-trail.js"></script>
